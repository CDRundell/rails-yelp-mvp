<div class="info-container">
  <h1> <%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
</div>

<div>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"> <strong> Review: </strong> <%= review.content %> | <strong> Rating: </strong> <%= review.rating %></li>
    <% end %>
  </ul>
</div>

<p><%= link_to "Add a review!", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Back to List", restaurants_path %></p>
